<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140px"
    android:id="@+id/rl"
    android:paddingLeft="30px"
    android:background="#0F1623"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tv1"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
         >
        <ImageView
            android:src="@mipmap/icon_safe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="10px"
            android:text="奔跑赚取"
            android:textColor="#2E4359"
            android:textSize="46px"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="10px"
            android:text="钱包获得奖励"
            android:textColor="#2E4359"
            android:textSize="40px"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>





    <TextView
        android:id="@+id/BTC_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="BTC"
        android:layout_marginLeft="30px"
        android:textColor="#2E4359"
        android:textSize="40px"
        android:textStyle="bold" />



    <LinearLayout
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:id="@+id/rl1"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总增值"
            android:layout_marginRight="10px"
            android:textColor="#2E4359"
            android:textSize="38px" />
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:layout_marginRight="10px"
            android:textColor="#2E4359"
            android:textSize="46px" />

        <TextView
            android:id="@+id/tv21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10px"
            android:text="DVE"
            android:textColor="#2E4359"
            android:textSize="38px" />
    </LinearLayout>
    <LinearLayout
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:id="@+id/r12"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="额外奖励"
            android:textColor="#2E4359"
            android:textSize="38px" />

        <TextView
            android:id="@+id/zongshichang"
            android:textSize="38px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl1"
            android:layout_marginTop="10px"
            android:layout_toEndOf="@+id/tv5"
            android:textColor="#2E4359"
            android:layout_toRightOf="@+id/tv5"
            android:text="DVGE" />
    </LinearLayout>

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="250px"
        android:text="0.12121313121"
        android:layout_centerHorizontal="true"
        android:textColor="#2E4359"
        android:textSize="42px" />
    <View
        android:id="@+id/view_button"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="139px"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#2E4359"/>


    <ImageView
        android:id="@+id/im"
        android:src="@mipmap/icon_unfold"
        android:onClick="foot_item"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>